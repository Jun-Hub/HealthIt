<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
        android:id="@+id/switch_toolBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:base_release_color="@android:color/tertiary_text_dark"
        app:base_press_color="@color/colorNotification"
        app:ball_release_color="@android:color/secondary_text_dark"
        app:ball_press_color="@color/colorAccent"
        app:icon_release="@drawable/ic_delete_press"
        app:icon_press="@drawable/ic_delete_release"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        />

</LinearLayout>